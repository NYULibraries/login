<div id="logins" class="container options-container">
  <div class="inner-container">
    <% if request.path.include? "visitor" %>
      <%= render "visitor" %>
    <% else %>
      <%= render "#{institution.code.to_s.downcase}" %>
    <% end %>
    <div class="row">
      <h2 class="help">
        <%= fa_icon "question-circle 2x", class: "circle" %>
        <span class="help_text">
          <%=
             link_to_remote_popover t('application.wayf_footer_html'),
                "http://library.nyu.edu/help/login.html",
                  "footer-help-popover", "data-class"=>"footer-help", "title"=>t('application.wayf_footer_popover_header_html')
           %>
        </span>
      </h2>
    </div>
  </div>
</div>
