<div id="new_school_ldap">
  <%= form_tag(user_new_school_ldap_omniauth_callback_path(institution: current_institution.code, auth_type: params[:auth_type]), class: "ns-login-form") do -%>
    <%= field_set_tag do -%>
      <legend class="heading"><%= t('application.ns.header') %></legend>
      <div class="form-group">
        <%= label_tag "username", t("application.ns.username_label") %>
        <div class="row">
          <div class="col-sm-8">
            <%= text_field_tag "username", nil, placeholder: t("application.ns.username_placeholder"), class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "password", t("application.ns.password_label") %>
        <div class="row">
          <div class="col-sm-8">
            <%= password_field_tag "password", nil, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <%= submit_tag "Login", class: "btn col-xs-12" %>
          </div>
        </div>
      </div>
    <%- end -%>
  <%- end -%>
</div>
